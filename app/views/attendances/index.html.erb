<h1>Listing attendances</h1>

<table>
  <tr>
    <th>Date</th>
    <th>In</th>
    <th>Out</th>
    <th>Note</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @attendances.each do |attendance| %>
  <tr>

    <td>
      <a href="#" id="date" data-type="text" data-pk="<%= attendance.id %>" data-url="<%= attendance_path(attendance.id) %>">
        <%= attendance.date %>
      </a>
    </td>
    <td><%= attendance.in %></td>
    <td><%= attendance.out %></td>
    <td><%= attendance.note %></td>
    <td><%= link_to 'Show', attendance %></td>
    <td><%= link_to 'Edit', edit_attendance_path(attendance) %></td>
    <td><%= link_to 'Destroy', attendance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

